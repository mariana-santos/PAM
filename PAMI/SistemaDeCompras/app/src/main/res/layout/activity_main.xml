<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E8E5E5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Compras"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brinquedos Estrela"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boneca Emília - R$39,99"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:id="@+id/cbEmilia"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boneca Xuxa - R$27,50"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:id="@+id/cbXuxa"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bola de futebol - R$15,75"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:id="@+id/cbBola"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corda de pular - R$10,69"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:id="@+id/cbCorda"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peças de montar - R$29,90"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:id="@+id/cbLego"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR"
        android:onClick="calcular"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:padding="17dp"
        android:background="#626781"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Total"
        android:textColor="#000000"
        android:textSize="25dp"
        android:text="Nada selecionado"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>