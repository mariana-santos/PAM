<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDados"
    android:orientation="vertical"
    android:background="@drawable/back">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informações dos usuários"
        android:textSize="40sp"
        android:fontFamily="@font/azonix"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textColor="@color/verdao"
        android:id="@+id/titulo"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:id="@+id/listView"
        android:background="#fff"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/verdin"
            android:fontFamily="@font/azonix"
            android:onClick="voltar"
            android:padding="20dp"
            android:text="Voltar"
            android:textColor="@color/pretin"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/verdin"
            android:fontFamily="@font/azonix"
            android:onClick="deletar"
            android:padding="20dp"
            android:text="deletar"
            android:textColor="@color/pretin"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>